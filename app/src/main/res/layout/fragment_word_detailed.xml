<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/topBar"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_weight="1"
            android:layout_width="50dp"
            android:padding="5dp"
            android:layout_height="50dp"
            android:id="@+id/backButton"
            android:src="@drawable/back_icon" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:id="@+id/btnWordConnections"
            android:src="@drawable/icon_word_connection" />

        <ImageView
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnHeritage"
            android:src="@drawable/icon_heritage" />

        <ImageView
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnSpheres"
            android:src="@drawable/icon_sphere" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/deleteBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_red_x"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:minHeight="70dp"
        android:gravity="center"
        android:id="@+id/characterDescriptionLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/wordBgImage"
            android:orientation="horizontal"
            android:background="@drawable/word_bg_person"
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="60dp">

            <ImageView
                android:visibility="gone"
                android:id="@+id/characterPortrait"
                android:layout_marginStart="12dp"
                android:layout_width="45dp"
                android:layout_height="45dp"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/wordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_bold"
                android:maxLines="4"
                android:gravity="center"
                android:text="Das Ist Ein Te"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnNewWord"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btnNewWord"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/icon_new_word"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

        <ImageView
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/buttonStrains"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_strains"
            />

        <ImageView
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/buttonSnippets"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_snippets"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/wordDetailedRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>