<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/snippets"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.wordassociater.snippet_parts.DetailedNavigatorBar
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray" />

    <com.example.wordassociater.storylines.StoryLineRecycler
        android:id="@+id/storyLineRecycler"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <com.example.wordassociater.timeline.Timeline
        android:id="@+id/timeLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/characterDescriptionLinear"
        android:orientation="vertical"
        android:gravity="top|center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </LinearLayout>
</LinearLayout>