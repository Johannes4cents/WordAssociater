<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/connectBtn"
            android:layout_marginStart="4dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/connect" />
        <TextView
            android:visibility="gone"
            android:layout_weight="1"
            android:minHeight="30dp"
            android:id="@+id/associatedWordsStrain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/roboto_bold"
            android:textSize="12sp" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/associatedWordsIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/btn_open_words_list"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/roboto_bold"
            android:textSize="12sp" />


        <com.example.wordassociater.buttons.StrainLayerButton
            android:layout_marginEnd="4dp"
            android:id="@+id/strainLayerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/characterRecycler"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Strain"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:minHeight="45dp"
        android:maxHeight="140dp"
        android:textColor="@color/black"
        android:text="This is a test Text I dont know what"
        android:id="@+id/contentPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>