<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.wordassociater.buttons.ButtonBubbleAdd
        android:layout_weight="1"
        android:id="@+id/addBlue"
        app:bubbleColor="blue"
        android:layout_height="45dp"
        android:layout_width="wrap_content"
        />
    <com.example.wordassociater.buttons.ButtonBubbleAdd
        android:layout_weight="1"
        android:id="@+id/addYellow"
        app:bubbleColor="yellow"
        android:layout_height="45dp"
        android:layout_width="wrap_content"
        />
    <com.example.wordassociater.buttons.ButtonBubbleAdd
        android:layout_weight="1"
        android:id="@+id/addGreen"
        app:bubbleColor="green"
        android:layout_height="45dp"
        android:layout_width="wrap_content"
        />
    <com.example.wordassociater.buttons.ButtonBubbleAdd
        android:layout_weight="1"
        android:id="@+id/addOrange"
        app:bubbleColor="orange"
        android:layout_height="45dp"
        android:layout_width="wrap_content"
        />
</LinearLayout>