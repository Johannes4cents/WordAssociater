<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/snippets"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.wordassociater.snippet_parts.DetailedNavigatorBar
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <com.example.wordassociater.storylines.StoryLineRecycler
        android:id="@+id/storyLineRecycler"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#390101"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <View
            android:background="#230101"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <View
            android:background="#390101"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>

    <com.example.wordassociater.timeline.Timeline
        android:id="@+id/timeLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.example.wordassociater.snippet_parts.SnippetPartDetails
        android:id="@+id/details"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>