<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="184dp"
    android:layout_height="55dp">

    <View
        android:background="@color/white"
        android:layout_width="4dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/selectLinear"
        android:background="@color/snippets"
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white"
            />

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="52dp">

            <ImageView
                android:padding="2dp"
                android:id="@+id/characterPortrait"
                android:layout_marginStart="4dp"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/wordText"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/roboto_bold"
                android:maxLines="4"
                android:gravity="center"
                tools:text="Das Ist Ein Tesdas"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnNewWord"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/connectIcon"
                    android:src="@drawable/icon_word_connection"
                    android:padding="2dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

                <ImageView
                    android:id="@+id/catIcon"
                    android:src="@drawable/wordcat_bg_grey"
                    android:padding="7dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>






</LinearLayout>