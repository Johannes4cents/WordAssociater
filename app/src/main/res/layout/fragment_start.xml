<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">
    <ScrollView
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/mainScroller"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.wordassociater.start_fragment.WordLinear
                android:id="@+id/wordLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <include layout="@layout/bar_add_button"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.example.wordassociater.bars.HandleWordsBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.example.wordassociater.bars.SnippetsStrainsBar
                android:id="@+id/readWriteBar"
                android:minHeight="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.example.wordassociater.bars.CharacterStoryBar
                android:id="@+id/characterBar"
                android:minHeight="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.example.wordassociater.bars.AddWordBar
                android:layout_marginTop="8dp"
                android:minHeight="45dp"
                android:id="@+id/addWordBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <LinearLayout
                android:id="@+id/bottomLinear"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/notesButton"
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_note"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>