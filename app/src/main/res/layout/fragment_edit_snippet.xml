<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.wordassociater.bars.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.wordassociater.bars.SnippetPartsBar
        android:id="@+id/snippetPartsBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <com.example.wordassociater.character.CharacterRecycler
        android:background="@color/snippetsLite"
        android:id="@+id/characterRecycler"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <com.example.wordassociater.words.WordRecycler
        android:id="@+id/wordPreviewRecycler"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <com.example.wordassociater.utils.WordsInputField
        android:id="@+id/snippetInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:hint="" />
</LinearLayout>