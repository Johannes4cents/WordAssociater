<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/snippetsLite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/btnLeft"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:src="@drawable/back_icon" />

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/btn1"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/icon_nuw"
            android:layout_width="0dp"
            android:layout_height="45dp"
            />

        <ImageView
            android:id="@+id/btn2"
            android:src="@drawable/icon_word"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:padding="15dp"
            />
        <ImageView
            android:padding="10dp"
            android:layout_weight="1"
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_dramaturgy" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/btn4"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_character" />

        <ImageView
            android:padding="10dp"
            android:layout_weight="1"
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_story" />

        <ImageView
            android:visibility="gone"
            android:padding="10dp"
            android:layout_weight="1"
            android:id="@+id/btnStandIn"
            android:layout_width="0dp"
            android:layout_height="45dp" />
    </LinearLayout>



    <ImageView
        android:id="@+id/btnRight"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:src="@drawable/btn_save" />


</LinearLayout>