<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/snippetInput"
        android:visibility="gone"
        android:gravity="top"
        android:minHeight="50dp"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/readBtn"
                android:layout_width="100dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_strains" />
        </LinearLayout>

        <LinearLayout
            android:minHeight="60dp"
            android:layout_width="wrap_content"
            android:gravity="top|center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/cancelSaveLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/leftSnippetButton"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_snippets"
                    />

                <ImageView
                    android:id="@+id/rightSnippetButton"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/btn_new_snippet"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/writeBtn"
                android:layout_width="100dp"
                android:layout_height="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_write" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>