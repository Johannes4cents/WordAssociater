<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:gravity="center|top"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_marginStart="4dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back_icon"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/deleteWord"
                android:padding="12dp"
                android:src="@drawable/icon_red_x"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>



        </LinearLayout>

        <ImageView
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_heritage"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/btnSave"
                android:layout_marginEnd="4dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_save_strain"
                />
            <ImageView
                android:padding="5dp"
                android:layout_weight="1"
                android:id="@+id/btnSpheres"
                android:layout_marginEnd="4dp"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:src="@drawable/sphere_blue"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Word Text"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textBranchOf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Branch of:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/fieldBranchOf"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Another Word"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Stems:"
            android:textSize="20sp" />

        <com.example.wordassociater.stems.StemsRecycler
            android:id="@+id/stemsRecycler"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </LinearLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textSynonyms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Synonyms:"
            android:textSize="20sp" />

        <com.example.wordassociater.synonyms.SynonymRecycler
            android:id="@+id/synonymRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textRootOf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Root of:"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>