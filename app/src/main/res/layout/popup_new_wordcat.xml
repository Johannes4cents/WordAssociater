<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/snippets"
    android:layout_width="200dp"
    android:layout_height="wrap_content">

    <com.example.wordassociater.utils.WordsInputField
        android:id="@+id/inputField"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#390101"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <View
            android:background="#230101"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <View
            android:background="#390101"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
    <TableLayout
        android:orientation="vertical"
        android:background="@color/snippets"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TableRow android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            >
            <ImageView
                android:id="@+id/blue"
                android:layout_weight="1"
                android:src="@drawable/wordcat_bg_blue"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/brown"
                android:layout_weight="1"
                android:src="@drawable/wordcat_bg_brown"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/green"
                android:layout_weight="1"
                android:src="@drawable/wordcat_bg_green"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
        </TableRow>

        <TableRow android:id="@+id/row2"
            android:layout_marginTop="4dp"
            >
            <ImageView
                android:layout_weight="1"
                android:id="@+id/grey"
                android:src="@drawable/wordcat_bg_grey"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:layout_weight="1"
                android:id="@+id/orange"
                android:src="@drawable/wordcat_bg_orange"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:layout_weight="1"
                android:id="@+id/pink"
                android:src="@drawable/wordcat_bg_pink"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
        </TableRow>

        <TableRow android:id="@+id/row4"
            android:layout_marginTop="4dp"
            >
            <ImageView
                android:id="@+id/red"
                android:layout_weight="1"
                android:src="@drawable/wordcat_bg_red"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/purple"
                android:layout_weight="1"
                android:src="@drawable/wordcat_bg_purple"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/teal"
                android:layout_weight="1"
                android:src="@drawable/wordcat_bg_teal"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
        </TableRow>

        <TableRow android:id="@+id/row3"
            android:layout_marginTop="4dp"
            >
            <ImageView
                android:id="@+id/darkGreen"
                android:layout_weight="1"
                android:src="@drawable/wordcat_bg_dark_green"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/darkBlue"
                android:layout_weight="1"
                android:src="@drawable/wordcat_bg_dark_blue"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/black"
                android:layout_weight="1"
                android:src="@drawable/wordcat_bg_black"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/btnBack"
            android:src="@drawable/back_icon"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/btnSave"
            android:src="@drawable/btn_save"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>