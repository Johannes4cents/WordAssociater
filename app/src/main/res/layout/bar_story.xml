<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.wordassociater.display_filter.DisplayFilter
        android:id="@+id/btn_view_filter"
        android:padding="2dp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="2dp"/>

    <ImageView
        android:id="@+id/btnWord"
        android:src="@drawable/icon_word"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:padding="12dp" />

    <ImageView
        android:layout_weight="1"
        android:id="@+id/btnCharacter"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_character" />

    <ImageView
        android:padding="8dp"
        android:layout_weight="1"
        android:id="@+id/iconSnippets"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_snippets_selected"/>

    <ImageView
        android:id="@+id/btnProse"
        android:padding="7dp"
        android:layout_weight="1"
        android:src="@drawable/icon_prose_unselected"
        android:layout_width="0dp"
        android:layout_height="40dp"
        />

    <ImageView
        android:id="@+id/btnBack"
        android:padding="2dp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/back_icon_mirrored" />

</LinearLayout>