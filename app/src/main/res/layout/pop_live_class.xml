<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/snippets"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="250dp">
    <LinearLayout
        android:id="@+id/topLinear"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_icon" />

        <ImageView
            android:id="@+id/iconType"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_character" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#390101"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <View
            android:background="#230101"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <View
            android:background="#390101"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
    <com.example.wordassociater.live_recycler.LiveRecycler
        android:id="@+id/liveRecycler"
        android:layout_width="match_parent"
        android:layout_height="216dp"/>
</LinearLayout>