<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/snippets"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/noun"
        android:padding="2dp"
        android:src="@drawable/word_class_noun"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <ImageView
        android:id="@+id/verb"
        android:padding="2dp"
        android:src="@drawable/word_class_verb"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <ImageView
        android:id="@+id/adjective"
        android:padding="2dp"
        android:src="@drawable/word_class_adjective"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</LinearLayout>